<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="20dp">


            <com.example.souvik.flappymenu.font.MaterialDesignIconsTextView
                android:id="@+id/transaction_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday, September 16"
                android:textColor="@android:color/white"
                android:textSize="55sp"
                app:typeface="robotoThin" />


            <com.example.souvik.flappymenu.font.MaterialDesignIconsTextView
                android:id="@+id/transaction_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fontello_icon_arrow"
                android:textColor="@android:color/white"
                android:textSize="70sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                app:typeface="robotoThin" />


            <com.example.souvik.flappymenu.font.MaterialDesignIconsTextView
                android:id="@+id/transaction_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday, September 16"
                android:textColor="@android:color/white"
                android:textSize="55sp"
                app:typeface="robotoThin" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.souvik.flappymenu.font.MaterialDesignIconsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fontello_icon_rupee"
                android:textColor="@android:color/white"
                android:paddingRight="15dp"
                android:textSize="40sp"
                />


            <com.example.souvik.flappymenu.font.RobotoTextView
                android:id="@+id/transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/fontello_icon_rupee"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                app:typeface="robotoMedium" />
        </LinearLayout>

        <com.example.souvik.flappymenu.font.RobotoTextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday, September 16"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:typeface="robotoThin" />
    </LinearLayout>

</RelativeLayout>