<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_activity"
    tools:context="com.example.souvik.flappymenu.MainActivity ">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/buttons">

    <Button
        android:alpha="0"
        android:gravity="bottom|center"
        android:paddingBottom="4dp"
        android:id="@+id/btn"
        android:text="Dining"
        android:textColor="#000000"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:transformPivotX="150dp"
        android:transformPivotY="50dp"
        android:background="@drawable/buttonshape_with_border"
        />

    <Button
        android:alpha="0"
        android:gravity="bottom|center"
        android:paddingBottom="4dp"
        android:id="@+id/btn1"
        android:text="Travel"
        android:textColor="#000000"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:transformPivotX="150dp"
        android:transformPivotY="50dp"
        android:background="@drawable/buttonshape_with_border"
        />

    <Button
        android:alpha="0"
        android:gravity="bottom|center"
        android:paddingBottom="4dp"
        android:id="@+id/btn2"
        android:text="Education"
        android:textColor="#000000"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:transformPivotX="150dp"
        android:transformPivotY="50dp"
        android:background="@drawable/buttonshape_with_border"
        />

    <Button
        android:alpha="0"
        android:gravity="bottom|center"
        android:paddingBottom="4dp"
        android:id="@+id/btn3"
        android:text="Services"
        android:textColor="#000000"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:transformPivotX="150dp"
        android:transformPivotY="50dp"
        android:background="@drawable/buttonshape_with_border"
        />

    <Button
        android:alpha="0"
        android:gravity="bottom|center"
        android:paddingBottom="4dp"
        android:id="@+id/btn4"
        android:text="Utilities"
        android:textColor="#000000"
        android:textSize="15sp"
        android:stateListAnimator="@null"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:transformPivotX="150dp"
        android:transformPivotY="50dp"
        android:background="@drawable/buttonshape_without_border"
        />
</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
